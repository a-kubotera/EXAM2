
<div class="container">
  <h2>マイページ</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <% if devise_error_messages!.present? %>
    <div class="alert alert-danger " role="alert">
       <span class=""><%= devise_error_messages! %></span>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-12 col-sm-3" style="text-align:center">
      <%= profile_img(@user) if profile_img(@user) %>
      <p><%= f.file_field :avatar%></p>
      <%= f.hidden_field :avatar_cache %>
    </div>
    <div class="col-xs-12 col-sm-9">
      <p>
        <span class="title">メールアドレス</span>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </p>
      <p>
        <span class="title">お名前</span>
        <%= f.text_field :name, class: "form-control" %>
      </p>
      <% if @user.provider.blank? %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-warning" role="alert">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <p>
          <span class="title">パスワード</span>
          <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
          <span class="info">変更したい場合だけ入力してください(<%= @minimum_password_length %>文字以上)</span>
        </p>
        <p>
          <span class="title">パスワード再入力</span>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          <span class="info">新しいパスワードをもう一度入力してください。</span>
        </p>
        <p>
          <span class="title"><%= f.label :current_password %></span>
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
        </p>

      <% end %>

    </div>
    <div class="col-xs-12 actions">
      <%= link_to "TOPへ戻る", :back, class:'btn btn-default btn_size' %>
      <%= f.submit "更新する", class:'btn btn-primary btn_size'%>
    </div>
</div>
  <% end %>
  <div class="row">
    <h3>このアカウントを削除する場合はこのボタンをクリック！</h3>
    <p><%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "本当に削除してもよろしいですか？?" }, method: :delete, class:'btn btn-danger btn_size' %></p>
  </div>
</div>
