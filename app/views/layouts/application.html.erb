<!DOCTYPE html>
<html>
  <head>
    <title>インスタグラムっぽい何か</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body class="<%= @bodyCls %>">
  <div class="container-fluid">
    <% if user_signed_in? && @is_menu.blank? %>
    <div class="headerArea row" >
      <ul class="list-inline">
        <!-- ログインした状態 -->
        <% if user_signed_in? %>
          <!-- 投稿ボタン -->
          <%if current_page?(pictures_path) %>
            <li>
              <%= link_to new_picture_path ,remote: true,class:"setLink" do %>
                <i class="glyphicon glyphicon-gift" aria-hidden="true">
                  <span style="margin-left:-15px;">投稿する</span>
                </i>
              <% end %>
            </li>
          <%end%>            
            <!-- Picture/Index -->
            <li>
              <%= link_to pictures_path ,class:"setLink" do %>
                <i class="glyphicon glyphicon-list-alt" aria-hidden="true">
                  <span class="hidden-xs" style="margin-left:-15px;">インデックス</span>
                </i>
              <% end %>
            </li>
            <!-- マイページ -->
            <li>
              <%= link_to edit_user_registration_path ,class:"setLink" do %>
                <i class="glyphicon glyphicon-user" aria-hidden="true">
                  <span class="hidden-xs" style="margin-left:-15px;">マイページ</span>
                </i>
              <% end %>
            </li>
            <!-- ログアウト -->
            <li>
              <%= link_to destroy_user_session_path,method: :delete ,class:"setLink" do %>
                <i class="glyphicon glyphicon-log-out" aria-hidden="true">
                  <span class="hidden-xs" style="margin-left:-15px;">ログアウト</span>
                </i>
              <% end %>
            </li>

          <!-- ログアウトした状態 -->
        <% else %>
          <!-- ログインボタン -->
          <li>
            <%= link_to new_user_session_path ,class:"setLink" do %>
              <i class="glyphicon glyphicon-log-in" aria-hidden="true">
                <span class="hidden-xs" style="margin-left:-15px;">ログイン</span>
              </i>
            <% end %>
          </li>
          <!-- サインインボタン -->
          <li>
            <%= link_to new_user_registration_path ,class:"setLink" do %>
              <i class="glyphicon glyphicon-pencil" aria-hidden="true">
                <span class="hidden-xs" style="margin-left:-15px;">サインアップ</span>
              </i>
            <% end %>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>
    <%= yield %>
  </div>
  </body>
</html>
